cabal-version: 2.4
name:          sprite-tool
version:       0.1.0
build-type:    Simple

executable sprite-tool
  main-is:          Main.hs
  hs-source-dirs:   app, src
  other-modules:    Config, Sprite, Launch, Push, Pull, Watch
  build-depends:    base >= 4.14 && < 5
                  , process >= 1.6
                  , directory >= 1.3
                  , filepath >= 1.4
  default-language: Haskell2010
  ghc-options:      -Wall -threaded
